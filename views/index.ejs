<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=>, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    <title>NoteLink</title>

    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

    <!-- Main Section Start -->
    <section id="main-section">
        <div id="wrap">
            <div class="navbar-section">
                <nav>
                    <ul>
                        <li class="">NoteLink</li>
                    </ul>
                </nav>
                <div id="add" class="media">
                    <form action="/create" method="post">
                        <button class="plus-button" type="submit"><span>+</span></button>
                    </form>
                </div>
            </div>
        </div>

        <div id="notes">
            <% for (let i = 0; i < notes.length; i += 2) { %>
            <%  let currNote = notes[i]; %>
            <%  let j = i + 1; %>
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <div class="card m-5 left-card note-card">
                            <center><h1 style="padding-top: 10px">Note <%= i+1 %></h1></center>
                            <div class="card-body">
                                <h5 class="card-title">Note Title: <%= currNote.noteTitle %></h5>
                                <p class="card-text"><%= currNote.noteDescription %></p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Emails: <%= currNote.noteEmails %></li>
                                <li class="list-group-item">People: <%= currNote.notePeople %></li>
                                <li class="list-group-item">Location: <%= currNote.noteLocation %></li>
                                <li class="list-group-item">Websites: <%= currNote.noteWebsite %></li>
                            </ul>
                            <div class="card-body">
                                <form class="" action="/home" method="post">
                                    <input type="text" placeholder="Type in the Note Title to delete this Note." style="width: 350px" name="notetitle"><br /><br />
                                    <button class="btn btn-danger" type="submit" name="button">X Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <% if (j < notes.length) { %>
                        <% let currNoteTwo = notes[j] %>
                        <div class="col-lg-6 col-sm-12">
                            <div class="card m-5 right-card note-card">
                                <center><h1 style="padding-top: 10px">Note <%= j+1 %></h1></center>
                                <div class="card-body">
                                    <h5 class="card-title">Note Title: <%= currNoteTwo.noteTitle %></h5>
                                    <p class="card-text"><%= currNoteTwo.noteDescription %></p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Emails: <%= currNoteTwo.noteEmails %></li>
                                    <li class="list-group-item">People: <%= currNoteTwo.notePeople %></li>
                                    <li class="list-group-item">Location: <%= currNoteTwo.noteLocation %></li>
                                    <li class="list-group-item">Websites: <%= currNoteTwo.noteWebsite %></li>
                                </ul>
                                <div class="card-body">
                                    <form class="" action="/home" method="post">
                                        <input type="text" placeholder="Type in the Note Title to delete this Note." style="width: 350px" name="notetitle"><br /><br />
                                        <button class="btn btn-danger" type="submit" name="button">X Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

            <% } %>
        </div>

        <div style="padding-top: 50px">
            <div id="footer" class="media">
                <center><h1 class="footer-text">Â©2022 Link Technologies All Rights Reserved</h1></center>
            </div>
        </div>


    </section>
    <!-- Main Section End -->

    <section id="extended-background"></section>


</body>
</html>